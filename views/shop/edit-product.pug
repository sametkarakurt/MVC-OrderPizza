extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content

    form(action="/products" method="POST")
 
        input(hidden type="text" name="musteriId" value=`${product.musteri_id}`)

        .h3 Müşteri Bilgileri

        .form-group.row
            label(for="name").col-sm-2.col-form-label Ad Soyad
            .col-sm-10
                input.form-control#name(type="text" name="name" value=`${product.ad_soyad}`)

        .form-group.row
            label(for="telefonNo").col-sm-2.col-form-label Telefon Numarası
            .col-sm-10
                input.form-control#name(type="text" name="telefonNo"  value=`${product.telefon_no}`)

        .form-group.row
            label(for="adres").col-sm-2.col-form-label Adres
            .col-sm-10
                input.form-control#name(type="text" name="adres"  value=`${product.adres}`)  
                
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Güncelle").btn.btn-primary   